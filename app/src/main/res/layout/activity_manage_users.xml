<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linermuser"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/successmsg"
        android:background="#34A338"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:drawablePadding="10dp"
            android:text="Updated Successfully"
            android:padding="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica"
            android:textColor="#FFFF"
            android:drawableLeft="@drawable/ic_check_circle_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/failmsg"
        android:background="#EC1830"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:drawablePadding="10dp"
            android:text="Uploading Failed"
            android:padding="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica"
            android:textColor="#FFFF"
            android:drawableLeft="@drawable/ic_close_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp"
        app:contentPadding="15dp">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/mprogressBar3"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/mname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/memail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/mphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/mjob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/mstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:fontFamily="@font/helvetica"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:popupBackground="#D3D5D3"
                    android:id="@+id/emstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Id" />

                <TextView
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:id="@+id/mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/mpro"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <CheckBox
        android:fontFamily="@font/helvetica"
        android:id="@+id/echeckBox"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="I declare that the information provided by me is accurate." />

<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <Button
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/helvetica"
        android:visibility="gone"
        android:id="@+id/esubmit"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="#ffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#1db086"
        android:text="SUBMIT"
        android:layout_marginEnd="10dp"
        android:textStyle="normal"
        tools:ignore="NestedWeights">

    </Button>
    <Button
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/helvetica"
        android:id="@+id/eedit"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="#ffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="#1db086"
        android:text="Edit"
        android:textStyle="normal">

    </Button>
</LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>